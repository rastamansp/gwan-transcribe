# Application
NODE_ENV=development
PORT=3000
APP_NAME=Gwan Transcribe API

# Database
DATABASE_URL=postgresql://postgres:pazdedeus@postgres.gwan.com.br:5433/gwan_transcribe

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key

# OpenAI (for translation)
OPENAI_API_KEY=your-openai-api-key

# MinIO Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password
MINIO_BUCKET_NAME=gwan-transcribe-audio
MINIO_USE_SSL=false

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASS=password

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@gwan.br

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=30m

# OTP
OTP_EXPIRES_IN=30m
OTP_MAX_ATTEMPTS=3
OTP_LENGTH=6

# File Upload
MAX_FILE_SIZE=100mb
ALLOWED_AUDIO_TYPES=mp3,wav,m4a,aac,flac,ogg,webm

# Logging
LOG_LEVEL=debug 

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://bff.gwan.com.br,https://www.bff.gwan.com.br,https://admin.gwan.com.br,https://www.admin.gwan.com.br
